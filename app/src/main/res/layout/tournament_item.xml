<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="36dp"
        android:layout_margin="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <!-- Top bar -->
            <RelativeLayout
                android:id="@+id/rlBarTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="4dp">

                <LinearLayout
                    android:id="@+id/llTop"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/tournament_top_bar">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Women Asia Cup"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="4dp"/>



                </LinearLayout>

                <ImageView
                    android:id="@+id/ivDot"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/tshirt"
                    app:tint="@color/blue"
                    android:layout_toStartOf="@+id/tvLive"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/tvLive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LINEUPS OUT"
                    android:textSize="16sp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/blue"
                    android:layout_alignParentEnd="true"/>

                <View
                    android:layout_below="@+id/llTop"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="6dp"
                    android:background="@color/black"
                    android:layout_marginHorizontal="8dp" />

            </RelativeLayout>

            <!-- middle bar -->

            <RelativeLayout
                android:layout_below="@+id/rlBarTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >

                <LinearLayout
                    android:id="@+id/llImage1"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:background="@color/blue"
                    android:orientation="horizontal"
                    />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:text="DC"
                    android:layout_toEndOf="@+id/ivTeamA"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:text="MI"
                    android:layout_toStartOf="@+id/ivTeamB"
                    android:layout_marginTop="12dp"/>


                <ImageView
                    android:id="@+id/ivTeamA"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:src="@drawable/offer_1"
                    android:layout_marginStart="28dp"/>

                <ImageView
                    android:id="@+id/ivTeamB"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:src="@drawable/offer_1"
                    android:layout_marginStart="290dp"
                    />

                <LinearLayout
                    android:id="@+id/llImage2"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:background="@color/blue"
                    android:orientation="horizontal"
                    android:layout_marginEnd="-20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvMin"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="10dp"
                        app:cardBackgroundColor="@color/grey">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20m:15s"
                            android:textColor="@color/red"
                            android:layout_margin="10dp"
                            android:paddingStart="6dp"
                            />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today, 7:00 PM"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_below="@id/cvMin"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>

            </RelativeLayout>


            <!-- bottom bar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/linear_gradient_upcoming">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="12dp"
                    android:layout_centerHorizontal="true">


                    <ImageView
                        android:id="@+id/ivOffer"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/offer_1"
                        android:layout_marginTop="2dp"/>


                    <TextView
                        android:id="@+id/tvLoss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Loss Offer :"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp" />


                    <TextView
                        android:id="@+id/tvRefund"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100% Refund if you lose"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>