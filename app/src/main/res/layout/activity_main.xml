<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.main.MainActivity">


<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/linear_gradient"
    >

    <include
        android:id="@+id/incTopBar"
        layout="@layout/app_top_bar"
        />

    <LinearLayout
        android:id="@+id/llMainLayout"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@+id/incTopBar"
        android:orientation="horizontal">

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rvOfferList"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:scrollbars="horizontal"
          android:overScrollMode="never"
          android:layout_marginVertical="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/llMainLayout"
        android:background="@drawable/main_background_bar"
        android:orientation="horizontal">

    </LinearLayout>

    <include
        android:id="@+id/incBottomBar"
        layout="@layout/bottom_bar"
        android:layout_above="@id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
</layout>